{
  "name": "edifyfox",
  "productName": "EdifyFox",
  "version": "3.0.0",
  "description": "Version 3 of the edifyfox app, Designed by ENSAM students in Meknes",
  "repository": "git@github.com:edifyFox/EdifyFox-2.git",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "com.electron.edifyfox",
    "productName": "edifyfox",
    "copyright": "Copyright Â© 2021 GilgameshProduction",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/assets/app-icon/win/app.ico"
    },
    "nsis": {
      "installerIcon": "src/assets/app-icon/win/app.ico",
      "uninstallerIcon": "src/assets/app-icon/win/app.ico",
      "uninstallDisplayName": "EdifyFox",
      "license": "LICENCE.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": {
    "name": "edifyFox",
    "email": "edifyprod@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "osxSign": {},
        "osxNotarize": {}
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "edifyfox"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@pdftron/webviewer": "^7.1.2",
    "bluebird": "^3.7.2",
    "electron-log": "^4.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^4.3.5",
    "jquery": "^3.5.1",
    "localforage": "^1.9.0",
    "signcode": "^1.0.0",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "10.1.3",
    "electron-builder": "^22.14.3",
    "electron-packager": "^15.1.0"
  }
}
